{
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "jsxSingleQuote": false,
        "printWidth": 120,
        "trailingComma": "all"
      }
    ],
    "no-shadow": [
      "error",
      { "builtinGlobals": false, "hoist": "functions", "allow": [] }
    ],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "strict": ["error", "safe"],
    "spaced-comment": ["error", "always"],
    "vars-on-top": "error",
    "prefer-arrow-callback": "error",
    "no-magic-numbers": ["error", { "detectObjects": false }]
  }
}
